<view class="home-wrap">
  <swiper indicator-dots="true" autoplay="{{autoplay}}" duration="{{duration}}" interval="{{interval}}">
    <view wx:for="{{banner}}" wx:key="unique">
      <swiper-item>
        <view>
          <navigator url="{{item.target}}">
            <image src="{{item.images}}" mode="scaleToFill center" class="banner"></image>
          </navigator>
        </view>
      </swiper-item>
    </view>
  </swiper>
  <view class="scroll-txt">
    <text class="scroll-ads">河北神龙物流信息科技有限公司欢迎您.....</text>
  </view>
  <view class="workbench">
    <text class="title">工作台</text>
    <view class="list">
      <view class="items">
        <image src="/res/images/desk_publish@2x.png"></image>
        <text>发布车源</text>
      </view>
      <view class="items">
        <image src="/res/images/desk_bid@2x.png"></image>
        <text>户准寻车</text>
      </view>
      <view class="items">
        <image src="/res/images/desk_order@2x.png"></image>
        <text>我的订单</text>
      </view>
      <view class="items">
        <image src="/res/images/desk_massage@2x.png"></image>
        <text>通知消息</text>
      </view>
    </view>
  </view>
  <view class="workbench">
    <text class="title">服务</text>
    <view class="list">
      <view class="items">
        <image src="/res/images/home_car_source@2x.png" class="service-icon"></image>
        <text>车辆档案</text>
      </view>
      <view class="items">
        <image src="/res/images/home_logistical@2x.png" class="service-icon"></image>
        <text>设备查询</text>
      </view>
      <view class="items">
        <image src="/res/images/home_headlines@2x.png" class="service-icon"></image>
        <text>证明查询</text>
      </view>
      <view class="items">
        <image src="/res/images/home_finance@2x.png" class="service-icon"></image>
        <text>续费查询</text>
      </view>
    </view>
  </view>
</view>